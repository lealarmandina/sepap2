<div id="hmenu">
    <ul>
      <li><%= link_to 'SEPAP', root_path %></li>
        <li><%= link_to "Admin", admin_dashboard_path if current_user.try(:teacher?) %></li>
      <div class="right">
        <ul>
          <li><%= link_to "#{t :menu_problems}", problems_path %></li>
          <%= render 'devise/menu/login_items' %>
	  <li><a href="https://docs.google.com/spreadsheet/viewform?formkey=dFBtcFFTc2IyUE5VU3l2T1pfZGh4N2c6MQ#gid=0"><%=t :feedback %></a></li>
	  <li><%=link_to( image_tag("english.png", size: "30x18") , :locale=>'en') %>
		<%=link_to( image_tag("spanish.gif",  size: "30x18") , :locale=>'es') %></li>
        </ul>
      </div>
    </ul>
  </div>
  <%if notice %>
    <div id="notice"><%= notice %></div>
  <% end %>
<%= devise_error_messages! %>
<div id="wrapper2">
	  <%= form_for(resource,  :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
	  <div class="upper">
		  <h1><%=t :menu_edit %></h1>
		  <%= image_tag("tec_logo.png", size: "240x100", class:"logo_tec") %>
	  </div>

	  <div class="content">
		  <span><%=t :session_edit %></span><br />
		  <%= f.email_field :email, :placeholder=>"mail@mail.com", :class=>"input username"  %>
		  <%= f.text_field :name, :placeholder=>"#{t :name}", :class=>"input username"  %>
		  <%= f.text_field :lastname, :placeholder=>"#{t :lastname}", :class=>"input username"  %>

		  <%= f.password_field :current_password, :placeholder=>"#{t :password_current}", :class=>"input password" %>

		  <%= f.password_field :password, :placeholder=>"#{t :password_new}", :class=>"input password" %>
    	          <%= f.password_field :password_confirmation, :placeholder=>"#{t :password_new_confirm}", :class=>"input password" %>

	  </div>

	  <div class="footer">
		  <div><%= f.submit "#{t :update}", :class=>"button"   %></div>
	  <% end %>
	  </div>
</div>
