<%= devise_error_messages! %>
<div id="wrapper2">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<div class="upper">
		<h1><%=t :register %></h1>
		<%= image_tag("tec_logo.png", size: "240x100", class:"logo_tec") %>
	</div>
	
	<div class="content">
	  	<span><%=t :session_register %></span><br />
		<%= f.text_field :num, :placeholder=>"#{t :studentID}", :class=>"input username"  %>
		<%= f.email_field :email, :placeholder=>"mail@mail.com", :class=>"input username"  %>
		
		<%= f.password_field :password, :placeholder=>"#{t :password}", :class=>"input password" %>
	  	<%= f.password_field :password_confirmation, :placeholder=>"#{t :password_confirm}", :class=>"input password" %>
		<div class="flags_container">
			<%=link_to( image_tag("english.png", size: "30x18", class:"flags_pass") , :locale=>'en') %>
			<%=link_to( image_tag("spanish.gif",  size: "30x18", class:"flags_pass") , :locale=>'es') %>
		</div>
	</div>
	
	<div class="footer">
		<div><%= f.submit "#{t :sign_up}", :class=>"button"  %></div>
		<%= link_to "#{t :sign_in_page}", new_user_session_path, :class=>"register" %>
		<%= link_to "#{t :forgot_password}", new_user_password_path, :class=>"register" %>
	<% end %>
	</div>
</div>
