<% if user_signed_in? %>
	<h3 id="menuTitulo"><%= current_user.name %></h3>
<% else %>
	<h3 id="menuTitulo">Menú</h3>
<% end %>
<ul class="botones">
<li>Inicio</li>
<li>Lista de Problemas</li>
<% if user_signed_in? %>
  <li class="botones">Subir Solución</li>
  <li class="botones"><%= link_to('Editar perfil', edit_user_registration_path) %></li>
  <li class="botones"><%=link_to "Historial", attempts_path, :class=>"botones "+(@tab=="hist"? "botonon" : "botonoff")%></li>
  <%if current_user.teacher?  %>
    <li class="botones">Crear Problema</li>
    <li class="botones">Grupos</li>
    <li class="botones">Últimas Actualizaciones</li>

    <li class="botones"><%= link_to "Administrar", admin_dashboard_path if current_user.try(:teacher?) %></li>
    
  <%end%>
    <li><%=link_to "Salir", destroy_user_session_path, :class=>"botones botonoff"%></li>
<% else %>
<li><%=link_to "Entrar", new_user_session_path, :class=>"botones "+(@tab=="entrar"? "botonon" : "botonoff")%></li>
<li><%=link_to "Registro", new_user_registration_path, :class=>"botones "+(@tab=="registroU"? "botonon" : "botonoff")%></li>
<%end%>
</ul>

